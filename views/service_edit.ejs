<!DOCTYPE html>
<html lang="zxx" class="js">
    <head>
        <%- include ('_header') %>
    </head>
    <body class="nk-body bg-lighter npc-default pg-auth dark-mode">
        <div class="nk-app-root">
            <!-- main @s -->
            <div class="nk-main ">
                <%- include ('_header_nav') %>
                <!-- content @s -->
                <div class="nk-content">
                    <div class="container-fluid">
                        <div class="nk-content-inner">
                            <div class="nk-content-body">
                                <div class="nk-block-head nk-block-head-sm">
                                    <div class="nk-block-head-sub">
                                        <a class="back-to" href="<%=helper.back_url%>">
                                            <em class="icon ni ni-arrow-left"></em><span>Back</span>
                                        </a>
                                    </div>
                                    <div class="nk-block-between">
                                        <div class="nk-block-head-content">
                                            <h3 class="nk-block-title page-title"  id='h_item_edit_title'><%=helper.item.title%></h3>
                                            <div class="nk-block-des text-soft">
                                                <p></p>
                                            </div>
                                        </div><!-- .nk-block-head-content -->
                                    </div><!-- .nk-block-between -->
                                </div>
                                <!-- .nk-block-head -->
                                <!-- .nk-block -->
                                <div class="nk-block nk-block-lg">
                                    <div class="card card-preview">
                                        <div class="card-inner">
                                            <div class="preview-block">
                                                <ul id='ul_nav_list' class="nk-nav nav nav-tabs"  id='div_tab_content'>
                                                    <li class="nav-item">
                                                        <a class="nav-link active" data-toggle="tab" href="#tab_title">Primary</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link" data-toggle="tab" href="#tab_photo">Photo</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link" data-toggle="tab" href="#tab_value">Values</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link" data-toggle="tab" href="#tab_big">Note</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link" data-toggle="tab" href="#tab_file">MP3</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link" data-toggle="tab" href="#tab_html">HTML</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link" data-toggle="tab" href="#tab_setting">Setting</a>
                                                    </li>
                                                </ul>
                                                <!-- .tab-content -->
                                                <div class="tab-content">
                                                    <!-- .tab-pane -->
                                                    <div class="tab-pane active" id="tab_title">

                                                        <div class="card-inner">
                                                            <form action="#">
                                                                <div class="form-group">
                                                                    <label class="form-label" for="tb_item_edit_title">Title</label>
                                                                    <div class="form-control-wrap">
                                                                        <input  type="text" class="form-control form-control-lg" id="tb_item_edit_title" value="" placeholder="">
                                                                        <input  type="hidden" class="form-control form-control-lg" id="tb_item_tbl_id" value="<%=helper.item.tbl_id%>">
                                                                        <input  type="hidden" class="form-control form-control-lg" id="tb_item_data_type" value="<%=helper.item.data_type%>">
                                                                        <input  type="hidden" class="form-control form-control-lg" id="tb_item_photofilename" value="<%=helper.item.tbl_id%>">
                                                                    	<input  type="hidden" class="form-control form-control-lg" id="tb_item_track_filename" value="<%=helper.item.mp3filename%>">
                                                                        <input  type="hidden" class="form-control form-control-lg" id="tb_item_track_duration" value="<%=helper.item.duration%>">
																		<input  type="hidden" class="form-control form-control-lg" id="tb_item_file_url" value="<%=helper.g_file_url%>">
                                                                        <input  type="hidden" class="form-control form-control-lg" id="tb_item_duration" value="<%=helper.item.duration%>">
                                                                  </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="form-label" for="tb_item_edit_category">Category</label>
                                                                    <div class="form-control-wrap">
                                                                        <select class="form-control form-control-xl" data-ui="xl" id="sel_item_edit_category">
                                                                            <%for(a=0;a<helper.category_list.length;a++){%>
                                                                            <option value="<%=helper.category_list[a].title%>"><%=helper.category_list[a].title%></option>
                                                                            <%}%>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                               <div class="form-group">
                                                                    <label class="form-label" for="tb_item_edit_category">Description</label>
                                                                    <div class="form-control-wrap">
                                                                        <input class="form-control" id="tb_item_edit_sub_note"  value="" >
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="form-label" for="tb_item_edit_category">Price</label>
                                                                    <div class="form-control-wrap">
                                                                        <input class="form-control" id="tb_item_edit_price"  value="" >
                                                                    </div>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label class="form-label" for="tb_item_edit_category">Old Price</label>
                                                                    <div class="form-control-wrap">
                                                                        <input class="form-control" id="tb_item_edit_old_price"  value="" >
                                                                    </div>
                                                                </div>


                                                                <div class="form-group">
                                                                    <label class="form-label" for="tb_item_edit_category">Type</label>
                                                                    <div class="form-control-wrap">
                                                                        <input class="form-control" id="tb_item_edit_type"  value="" >
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="form-label" for="tb_item_edit_category">Sub Type</label>
                                                                    <div class="form-control-wrap">
                                                                        <input class="form-control" id="tb_item_edit_sub_type"  value="" >
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="form-label" for="tb_item_edit_category">Visible</label>
                                                                    <div class="form-control-wrap">
                                                                        <select class="form-control form-control-xl" data-ui="xl" id="sel_item_edit_visible">
                                                                            <%for(a=0;a<helper.service_visible_option_list.length;a++){%>
                                                                            <option value="<%=helper.service_visible_option_list[a].value%>"><%=helper.service_visible_option_list[a].text%></option>
                                                                            <%}%>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                    <!-- .tab-pane -->
                                                    <!-- .tab-pane -->
                                                    <div class="tab-pane" id="tab_retail">
                                                        <div class="row gy-4 tabs">
                                                            <div class="col-md-6">
                                                                <div class="card card-bordered">
                                                                    <div class="card-inner">
                                                                        <div class="card-head">
                                                                            <h5 class="card-title">Retail Settings</h5>
                                                                        </div>
                                                                        <form action="#" class="gy-3">
                                                                            <%if(helper.item.retail_id){%>
                                                                            <div class="row g-3 align-center">
                                                                                <div class="col-lg-5">
                                                                                    <div class="form-group">
                                                                                        <label class="form-label" for="site-name">Image</label>
                                                                                        <span class="form-note">The image that will appear on the order and invoice.</span>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-lg-7">
                                                                                    <div class="form-group">
                                                                                        <div class="form-control-wrap">
                                                                                            <label class="form-label" for="site-name" id='lbl_retail_name'><img src='<%=helper.item.photo_obj.thumb_url%>' /></label>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-lg-5">
                                                                                    <div class="form-group">
                                                                                        <label class="form-label" for="site-name">Retail Name</label>
                                                                                        <span class="form-note">The name that will appear on the order and invoice.</span>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-lg-7">
                                                                                    <div class="form-group">
                                                                                        <div class="form-control-wrap">
                                                                                            <label class="form-label" for="site-name" id='lbl_retail_name'><%=helper.item.retail_name%></label>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                            <div class="row g-3 align-center">
                                                                                <div class="col-lg-5">
                                                                                    <div class="form-group">
                                                                                        <label class="form-label" for="site-name">Price ID</label>
                                                                                        <span class="form-note">The price id for point of sale system.</span>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-lg-7">
                                                                                    <div class="form-group">
                                                                                        <div class="form-control-wrap">
                                                                                            <label class="form-label" for="site-name" id='lbl_retail_price_id'><%=helper.item.retail_price_id%></label>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                            <div class="row g-3 align-center">
                                                                                <div class="col-lg-5">
                                                                                    <div class="form-group">
                                                                                        <label class="form-label" for="site-name">Price</label>
                                                                                        <span class="form-note">The price  of the item on the order.</span>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-lg-7">
                                                                                    <div class="form-group">
                                                                                        <div class="form-control-wrap">
                                                                                            <label class="form-label" for="site-name" id='lbl_retail_price'><%=helper.item.retail_price%></label>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                            <%}%>
                                                                            <div class="row g-3">
                                                                                <div class="col-lg-7 offset-lg-5">
                                                                                    <div class="form-group mt-2">
                                                                                        <%if(!helper.item.retail_id){%>
                                                                                        <button type="button"  id='btn_retail_add_submit' class="btn btn-lg btn-primary">Make This Item For Sale?</button>
                                                                                        <%}else if(helper.item.retail_id){%>
                                                                                        <button type="button"  id='btn_retail_remove_submit' class="btn btn-lg btn-primary">Remove Item For Sale?</button>
                                                                                        <%}%>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- .tab-pane -->
                                                    <!-- .tab-pane -->
                                                    <div class="tab-pane" id="tab_photo">
                                                        <%- include ('_biz_tab_photo') %>
                                                    </div>
                                                    <!-- .tab-pane -->
                                                    <!-- .tab-pane -->
                                                    <div class="tab-pane" id="tab_value">
                                                        <%- include ('_biz_tab_value_prop') %>
                                                    </div>
                                                    <!-- .tab-pane -->
                                                    <!-- .tab-pane -->
                                                    <div class="tab-pane" id="tab_file">
                                                        <%- include ('_biz_mp3_upload') %>
                                                    </div><!-- .tab-pane -->
                                                    <!-- .tab-pane -->
                                                    <div class="tab-pane" id="tab_big">
                                                        <%- include ('_biz_tab_note') %>
                                                    </div>
                                                    <!-- .tab-pane -->
                                                    <!-- .tab-pane -->
                                                    <div class="tab-pane" id="tab_html">
                                                        <%- include ('_biz_tab_html') %>
                                                    </div>
                                                    <!-- .tab-pane -->
                                                    <!-- .tab-pane -->
                                                    <div class="tab-pane" id="tab_setting">
                                                        <%- include ('_biz_tab_setting') %>
                                                    </div>
                                                    <!-- .tab-pane -->
                                                    <!--bottom start--!>
                                                        <div class="row gy-4 tabs">
                                                        <%- include ('_biz_tab_bottom') %>
                                                        </div>
                                                        <!--bottom end--!>
                                                            </div>
                                                            <!-- .tab-content -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- .nk-block -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content @e -->
                <!-- footer @s -->
                <div class="nk-footer">
                    <%- include ('_footer') %>
                </div>
                <!-- footer @e -->
            </div>
            <!-- wrap @e -->
        </div>
        <!-- main @e -->
        <!-- app-root @e -->
        <!-- modal_start -->
        <!-- modal_end -->
    </body>
    <%- include ('_footer_file') %>
    <script src="/js/biz_scriptz/service.js"></script>
    <script>
        $(document).ready(function() {
            get_bind_biz_item();
        });
    </script>
</html>
